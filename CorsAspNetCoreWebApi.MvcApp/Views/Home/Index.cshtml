@{
    ViewData["Title"] = "Home Page";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <h2>Movies List</h2>
    </div>
    <div class="panel-body">
        <table id="table_movies" class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Classification</th>
                    <th>Running Time</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $.ajax({
                type: "GET",
                url: "http://localhost:1060/api/Movies",
                contentType: "application/json;odata.metadata=minimal;odata.streaming=true",
                dataType: "json",
                success: function (data) {
                    $.each(data, function (i, item) {
                        var row = "<tr>" +
                            "<td>" + item.name + "</td>" +
                            "<td>" + item.classification + "</td>" +
                            "<td>" + item.runningTime + "</td>" +
                            "</tr>";
                        $("#table_movies > tbody").append(row);
                    });
                },
                error: function (jqXHR) {
                    alert(JSON.stringify(jqXHR));
                }
            });
        });
    </script>
}
